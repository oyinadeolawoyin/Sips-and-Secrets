<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %></title>
    <link rel="stylesheet" href="/profile.css">
</head>
<body>
    <header>       
        <button class="pro"><%= user.username %></button>
        <div class="div">
            <div class="status">
                <p><%= user.membership ? "✓ Member" : "Not Member" %></p>
                <p><%= user.admin ? "✓ Admin" : "Not Admin" %></p>
            </div>
            <div class="settings">
                <button><a href="/profile/<%= user.username %>/edit">Settings</a></button> 
                <button><a href="/logOut">Log Out</a></button>
                <button><a href="/">Home</a></button>
            </div> 
        </div>
    </header>
    
    <main>      
        <section>
            <h2 class="post"><i>Posts</i></h2>
            <% if (posts.length === 0) { %>
                <p>No posts found</p>
            <% } else { %>
                <ul>
                    <% posts.forEach((post) => { %>
                        <ul>
                            <li class="title"><strong><%= post.title %></strong></li>
                            <li><%= post.content %></li> 
                            <li>
                                <img src="/images/calendar-range.svg" alt="Date">
                                <span>
                                    <%= new Date(post.date).toLocaleString('en-US', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit',
                                    }) %>
                                </span>
                            </li>  
                            <div class="form">
                                <button class="button buttons">
                                    <img src="/images/pen.svg" alt="read">
                                    <a href="/content/<%= post.id %>">Read</a>
                                </button>
                                <form action="/content/<%= post.id %>/delete" method="POST" style="display:inline; flex: 1;">
                                    <button type="submit" class="button buttons">
                                        <img src="/images/delete-forever.svg" alt="delete">
                                        <span>Delete</span>
                                    </button>
                                </form>
                                <form action="/content/<%= post.id %>/update" method="GET" style="display:inline; flex: 1;">
                                    <button type="submit" class="button buttons">
                                        <img src="/images/update.svg" alt="update">
                                        <span>Edit</span>
                                    </button>
                                </form>
                            </div>                
                        </ul>
                    <% }) %>                      
                </ul>
            <% } %>
        </section>     
    </main>
</body>
</html>